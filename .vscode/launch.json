{
    "configurations": [
        {
            "name": "Launch Test CLI",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/ndi.ts",
            "runtimeArgs": [
                "random",
                "-f",
                "${input:frames}",
                "-w",
                "${input:width}",
                "-h",
                "${input:height}",
                "${input:timeout}",
                "${input:audio}",
                "${input:video}",
            ],
        },
    ],
    "inputs": [
        {
            "id": "frames",
            "type": "promptString",
            "default": "30",
            "description": "Enter framerate"
        },
        {
            "id": "timeout",
            "type": "promptString",
            "default": "15",
            "description": "Enter number of seconds to broadcast signal"
        },
        {
            "id": "width",
            "type": "promptString",
            "default": "640",
            "description": "Enter the video width"
        },
        {
            "id": "height",
            "type": "promptString",
            "default": "480",
            "description": "Enter the video height"
        },
        {
            "id": "audio",
            "type": "pickString",
            "description": "Select your audio choice",
            "default": "--audio",
            "options": ["--audio", "--no-audio"]
        },
        {
            "id": "video",
            "type": "pickString",
            "description": "Select your video choice",
            "default": "--video",
            "options": ["--video", "--no-video"]
        },
    ]
}
